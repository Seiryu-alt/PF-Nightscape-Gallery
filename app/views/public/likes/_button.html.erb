<% if user_signed_in? %>
  <% if post_image.liked_by?(current_user) %>
    <%= link_to post_image_like_path(post_image), method: :delete, remote: true,
      class: 'text-reset text-decoration-none' do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to post_image_like_path(post_image), method: :post, remote: true,
      class: 'text-reset text-decoration-none' do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-heart"></i>
<% end %>
