<div class="media mt-3 p-2">
  <%= link_to user_path(current_user), class: 'text-reset text-decoration-none mr-2' do %>
    <%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, size: '30x30', fallback: "no_profile_image.jpg", class: "rounded-circle mr-2" %>
  <% end %>
  <div class="media-body mt-0">
    <%= form_with model: new_comment, url: post_image_post_image_comments_path(post_image), remote: true do |f| %>
      <div class="form-group text-right">
        <%= f.text_area :comment, placeholder: "コメントを入力", class: "form-control" %>
        <%= f.submit "コメント", class: "mt-2 btn btn-sm btn-info" %>
      </div>
    <% end %>
  </div>
</div>