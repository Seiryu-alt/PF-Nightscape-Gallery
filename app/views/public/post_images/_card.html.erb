<div class="card h-100 border-0">
  <%= link_to post_image_path(post_image) do %>
    <%= attachment_image_tag post_image, :image, :fill, 600, 400, class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to user_path(post_image.user), class: 'text-reset text-decoration-none' do %>
        <%= attachment_image_tag post_image.user, :profile_image, :fill, 30, 30, size: '30x30', fallback: "no_profile_image.jpg", class: "rounded-circle mr-2" %>
        <%= post_image.user.name %>
      <% end %>
    </h5>
    <p class="card-text">
      <%= post_image.description %>
    </p>
    <% post_image.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag), class: "badge badge-warning p-1 mr-1" %>
    <% end %>
  </div>
  <div class="card-footer bg-transparent border-0 pt-0 d-flex">
    <div class="flex-grow-1">
      <span class="like_button_<%= post_image.id %> mr-1">
        <%= render 'public/likes/button', post_image: post_image %>
      </span>
      <span class="comment_button_<%= post_image.id %> mr-1">
        <%= render 'public/post_image_comments/button', post_image: post_image %>
      </span>
    </div>
    <div class="text-muted text-right">
      <%= time_ago_in_words(post_image.updated_at) %>Ââç
    </div>
  </div>
</div>