<% if user_signed_in? && user != current_user%>
  <% if user.followed_by?(current_user) %>
    <%= link_to user_relationship_path(user), method: :delete, remote: true,
      id: "followbutton-followed_#{user.id}", class: "text-decoration-none btn btn-primary" do %>
      フォロー中
    <% end %>
  <% else %>
    <%= link_to user_relationship_path(user), method: :post, remote: true,
      class: "btn btn-outline-primary" do %>
      フォロー
    <% end %>
  <% end %>

  <script>
    $(function(){
      $('#followbutton-followed_<%= user.id %>').hover(
        function() {
          $(this).text('フォロー解除');
          $(this).addClass("btn-danger");
          $(this).removeClass("btn-primary");
    
        },
        function() {
          $(this).text('フォロー中');
          $(this).addClass("btn-primary");
          $(this).removeClass("btn-danger");
        }
      );
    });
  </script>
<% end %>

