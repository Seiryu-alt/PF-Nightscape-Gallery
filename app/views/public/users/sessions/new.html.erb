<% content_for :title, "ログイン - Nightscape Gallery" %>

<div class="container pt-sm-4">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto p-4 bg-white rounded">
      <h1 class="mb-3">Log in</h1>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render 'shared/form_error', model: @user %>

        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions d-flex justify-content-between">
          <%= f.submit "Log in", class: "btn btn-primary" %>
          <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: " btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
